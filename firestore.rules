rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if user belongs to a family
    function isFamilyMember(familyId) {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.familyId == familyId;
    }

    // Users collection - users can read/write their own document
    match /users/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Families collection
    match /families/{familyId} {
      // Family members can read and write family document
      allow read: if isFamilyMember(familyId);
      allow write: if isFamilyMember(familyId);

      // Hikes subcollection - family members can read/write all hikes
      match /hikes/{hikeId} {
        allow read: if isFamilyMember(familyId);
        allow create: if isFamilyMember(familyId);
        allow update: if isFamilyMember(familyId);
        allow delete: if isFamilyMember(familyId);
      }

      // Badges subcollection - family members can read/write all badges
      match /badges/{badgeId} {
        allow read: if isFamilyMember(familyId);
        allow create: if isFamilyMember(familyId);
        allow update: if isFamilyMember(familyId);
        allow delete: if isFamilyMember(familyId);
      }
    }
  }
}
